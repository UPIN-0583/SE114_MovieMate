<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái đã chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFD700" /> <!-- Màu vàng khi được chọn -->
            <corners android:radius="24dp" /> <!-- Bo tròn các góc -->
        </shape>
    </item>
    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#333333" /> <!-- Màu đen khi không chọn -->
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>
