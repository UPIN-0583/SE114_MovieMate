<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Màu nền chính (background color của ứng dụng) -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:editTextColor">@color/white</item>

        <!-- Màu chữ và biểu tượng (Icon và Text color) -->
        <item name="android:textColor">@color/white</item>

        <!-- Màu chính (primary) là nút Sign in màu vàng -->
        <item name="colorPrimary">@color/yellow</item>

        <item name="colorOnPrimary">@color/black</item>

        <!-- Màu cho các nút khác như nút Facebook, Google (thường màu đen) -->
        <item name="colorPrimaryVariant">@color/black2</item>

        <!-- Màu nhấn khi tương tác -->
        <item name="colorSecondary">@color/yellow</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.MovieMate.Starting" parent="Theme.SplashScreen">
        <!-- Màu nền của splash screen -->
        <item name="windowSplashScreenBackground">@color/black</item>

        <!-- Icon splash screen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>

        <!-- Thời gian animation (ms) -->
        <item name="windowSplashScreenAnimationDuration">10000</item>

        <!-- Theme sau khi splash screen kết thúc -->
        <item name="postSplashScreenTheme">@style/Theme.MovieMate</item>
    </style>
</resources>