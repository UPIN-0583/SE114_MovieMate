<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieMate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Màu nền chính (background color của ứng dụng) -->
        <item name="android:colorBackground">@color/black</item>

        <!-- Màu chữ và biểu tượng (Icon và Text color) -->
        <item name="android:textColor">@color/white</item>

        <!-- Màu chính (primary) là nút Sign in màu vàng -->
        <item name="colorPrimary">@color/yellow</item>

        <!-- Màu cho các nút khác như nút Facebook, Google (thường màu đen) -->
        <item name="colorPrimaryVariant">@color/black2</item>

        <!-- Màu nhấn khi tương tác -->
        <item name="colorSecondary">@color/yellow</item>
    </style>
</resources>