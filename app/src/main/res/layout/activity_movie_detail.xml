<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/BackBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/back_button_effect"
                android:contentDescription="@string/back_button"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie Detail"
                android:textAppearance="@style/payment_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Movie Poster -->
        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop" />

        <!-- Movie Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingTop="8dp"
                android:text="Time:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/movie_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingTop="8dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="1h 55m"
                android:textColor="@android:color/white"
                android:layout_marginLeft="70dp"
                />
            <Button
                android:id="@+id/watch_trailer_button"
                android:layout_width="114dp"
                android:layout_height="34dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/watchtrailer"
                android:padding="10dp"
                android:layout_marginStart="80dp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Movie Language -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Language:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/movie_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:layout_marginLeft="40dp"
                android:paddingTop="8dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Movie Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Rating:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/movie_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+16"
                android:layout_marginLeft="60dp"
                android:paddingTop="8dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Movie genre:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>


            <!-- Movie Genre -->
            <TextView
                android:id="@+id/movie_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Adventure, Action"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/textview15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Storyline"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <!-- Movie Description -->
        <TextView
            android:id="@+id/movie_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: This is the movie description"
            android:paddingTop="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Section for Director -->
        <TextView
            android:id="@+id/director_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:textColor="@android:color/white" />

        <!-- RecyclerView for Director List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/director_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Section for Actor -->
        <TextView
            android:id="@+id/actor_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actor"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:textColor="@android:color/white" />

        <!-- RecyclerView for Actor List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/actor_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Section for Cinema -->
        <TextView
            android:id="@+id/cinema_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cinema"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:textColor="@android:color/white" />

        <!-- RecyclerView for Cinema List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cinema_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            />

        <!-- Continue Button -->
        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:visibility="gone"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFD700"
            android:textColor="#000000"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>
